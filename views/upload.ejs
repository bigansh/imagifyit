<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- META TAGS -->
		<%- include("partials/meta") %>

		<!-- LINK TAGS -->
		<%- include("partials/link") %>
		<link rel="stylesheet" href="/styles/upload.css" />

		<title>Upload / Imagify</title>
	</head>
	<body>
		<div class="main bg-light">
			<!-- NAVBAR -->
			<%- include("partials/navbar") %>

			<!-- UPLOAD -->
			<section class="p-5 
				d-flex 
				flex-column 
				justify-content-center 
				align-items-center"
				>
				<div class="container 
					text-center 
					d-flex 
					justify-content-center 
					align-items-center">
					<form action="/create" id="upload-form" method="POST" 
						class="
							d-flex 
							flex-column 
							justify-content-center 
							align-items-center">
						<div
							id="uploader"
							class="
								rounded
								text-center
								justify-content-center
								align-items-center
							"
						>
							<input
								type="text"
								id="base64URL"
								name="base64URL"
								class="d-none"
							/>
							<input
								class=""
								id="uploader-input"
								accept="image/*"
								name="image"
								type="file"
							/>
							<img
								src="images/Upload.svg"
								id="uploader-icon"
								class="img-fluid"
								alt="#"
							/>
							<p id="uploader-text" class="lead">Click or drop the image</p>
						</div>
						<input
							type="text"
							id="img-url"
							name="url"
							class="form-control form-control-lg w-75 mb-4"
							placeholder="or URL of the image"
						/>
						<button type="submit" class="btn btn-lg bg-danger text-light">
							Proceed
							<i class="bi bi-chevron-right"></i>
						</button>
					</form>
				</div>
			</section>

			<!-- FOOTER -->
			<%- include("partials/footer") %>
		</div>
		
		<!-- SCRIPT TAGS -->
		<%- include("partials/script") %>
		<script src="/scripts/upload.js"></script>
	</body>
</html>
