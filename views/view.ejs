<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- META TAGS -->
    <meta name="robots" content="noindex, follow" />
    <%- include("partials/meta") %>

    <!-- LINK TAGS -->
    <%- include("partials/link") %>
    <link rel="stylesheet" href="/styles/view.css" />

    <title>View / Imagify</title>
  </head>
  <body>
    <!-- NO SCRIPT -->
    <%- include("partials/inline-script.ejs") %>

    <div class="main bg-light">
      <!-- NAVBAR -->
      <%- include("partials/navbar") %>

      <!-- DETAILS -->
      <section class="section">
        <div class="container">
          <div class="text-center row">
            <div class="col-md text-md-start mb-5">
              <h1 class="mb-3 header">Here is your imagified link!</h1>
              <div class="mb-md-5 mb-3">
                <h4
                  class="align-middle fst-italic text-break d-md-inline"
                  id="link"
                >
                  <%= `https://imagify.ml/${og.id}` %>
                </h4>
                <button id="copy" class="btn m-2">
                  <i class="bi bi-clipboard"></i>
                </button>
              </div>
              <div>
                <h3 class="header mb-3">Test it using social debuggers!</h3>
                <div>
                  <span class="fs-2 icons">
                    <a
                      href="https://developers.facebook.com/tools/debug/"
                      target="_blank"
                      class="text-reset text-decoration-none"
                    >
                      <i class="bi bi-facebook"></i>
                    </a>
                  </span>
                  <span class="fs-2 p-3 icons">
                    <a
                      href="https://cards-dev.twitter.com/validator"
                      target="_blank"
                      class="text-reset text-decoration-none"
                    >
                      <i class="bi bi-twitter"></i>
                    </a>
                  </span>
                  <span class="fs-2 icons">
                    <a
                      href="https://www.linkedin.com/post-inspector/"
                      target="_blank"
                      class="text-reset text-decoration-none"
                    >
                      <i class="bi bi-linkedin"></i>
                    </a>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-md">
              <% if (og.cardType === 'large') { %>
              <div id="card-large" class="border d-inline-block">
                <div class="border-bottom">
                  <img src="<%= og.image %>" alt="#" id="card-image" />
                </div>
                <div class="card-info">
                  <div class="card-title"><%= og.title %></div>
                  <div class="card-description"><%= og.description %></div>
                  <div class="card-link">imagify.ml</div>
                </div>
              </div>
              <% } %> <% if (og.cardType === 'small') { %>
              <div id="card-small" class="border">
                <div id="card-image-box" class="border-end">
                  <img
                    src="<%= og.image %>"
                    alt="#"
                    id="card-image"
                    class="img-fluid"
                  />
                </div>
                <div class="card-info">
                  <div class="card-title"><%= og.title %></div>
                  <div class="card-description"><%= og.description %></div>
                  <div class="card-link">imagify.ml</div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </section>

      <!-- FOOTER -->
      <%- include("partials/footer") %>

      <!-- SCRIPT TAGS -->
      <%- include("partials/script") %>
    </div>
    <script src="/scripts/view.js"></script>
  </body>
</html>
