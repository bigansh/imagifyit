<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- META TAGS -->
		<%- include("partials/meta") %>

		<!-- LINK TAGS -->
		<%- include("partials/link") %>
		<link rel="stylesheet" href="/styles/create.css" />

		<title>Create / Imagify</title>
	</head>
	<body>
		<div class="main bg-light">
			<!-- NAVBAR -->
			<%- include("partials/navbar") %>

			<!-- DETAILS -->
			<section class="p-5">
				<div class="container text-center d-flex justify-content-center">
					<form action="/create/details" method="post" id="create-form" class="w-75">
						<input
							type="text"
							class="text-input form-control form-control-lg mb-3"
							placeholder="Title"
							name="title"
							id="title-input"
						/>

						<!-- <input
							type="text"
							class="text-input form-control form-control-lg mb-3"
							placeholder="Description"
							name="description"
							id="description-input"
						/> -->

						<textarea type="text"
							class="text-input form-control form-control-lg mb-3"
							placeholder="Description"
							name="description"
							id="description-input" cols="30" rows="5"
						></textarea>

						<input
							type="text"
							name="destination"
							id="url-input"
							class="text-input form-control form-control-lg mb-3"
							placeholder="Destination URL"
						/>

						<div class="input-group mb-3">
							<span class="input-group-text bg-light" id="text-span">
								imagify.ml/
							</span>
							<input
								type="text"
								name="alias"
								id="alias-input"
								class="form-control form-control-lg text-input"
								placeholder="Alias (optional)"
							/>
						</div>

						<select
							id="select-option"
							class="form-select form-select-lg text-input bg-light mb-4"
							required
							name="card"
							title="Select the card size"
						>
							<option value="large">Card Type - Large</option>
							<option value="small">Card Type - Small</option>
						</select>

						<div 
							class="d-flex 
							justify-content-center
							align-items-start"
							>
							<div 
								id="card-large" 
								class="border d-inline-block d-none rounded mb-4"
								>
								<div class="border-bottom">
									<img src="<%= image %>" alt="#" id="card-image" />
								</div>
								<div class="p-2 text-start">
									<h4 class="mb-1 card-title">Title</h4>
									<p class="mb-1 card-description">Description</p>
									<em>imagifyit.ml</em>
								</div>
							</div>

							<div
								id="card-small"
								class="border rounded mb-4 d-flex w-75"
								>
								<div class="border-end" >
									<img src="<%= image %>" alt="#" id="card-image-small" />
								</div>
								<div class="p-2 text-start">
									<h4 class="mb-1 card-title">Title</h4>
									<div class="mb-1 card-description">Description</div>
									<em><strong>imagifyit.ml</strong></em>
								</div>
							</div>
						</div>

						<input
							type="text"
							name="image"
							class="d-none"
							value="<%= image %>"
						/>

						<div>
							<button 
							type="button"
							id="btn-create"
							class="btn btn-lg bg-danger text-light">
							Create
							<i class="bi bi-chevron-right"></i>
						</button>
					</div>
					</form>
				</div>
			</section>
			
			<!-- FOOTER -->
			<%- include("partials/footer") %>
		</div>

		<!-- SCRIPT TAGS -->
		<%- include("partials/script") %>
		<script src="/scripts/create.js"></script>
	</body>
</html>
